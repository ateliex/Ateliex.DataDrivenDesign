@model Ateliex.Areas.Cadastro.Models.Modelo

@{
    ViewData["Title"] = $"Detalhar {Model.Codigo} - Modelo";

    var parent = (string?)ViewData["Parent"];
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Cadastro" asp-controller="Home" asp-action="Index">Cadastro</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Modelo</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detalhar @Model.Codigo</li>
    </ol>
</nav>

<section>
    <h1>Detalhar Modelo</h1>

    <div class="container">
        <partial name="Item/_Modelo" model="Model" />

        <p>
            <a asp-action="Edit" asp-route-id="@Model?.Codigo" asp-route-parent="@parent" asp-route-from="Details">Editar<i class="bi bi-pencil"></i></a>
            <a asp-action="Delete" asp-route-id="@Model?.Codigo" asp-route-parent="@parent" asp-route-from="Details" class="link-danger">Excluir<i class="bi bi-trash"></i></a>
        </p>

        <partial name="_Details" model="Model" />
    </div>
</section>
