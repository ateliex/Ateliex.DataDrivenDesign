@model Ateliex.Areas.Cadastro.Models.Modelo

@{
    ViewData["Title"] = $"Editar {Model.Codigo} - Modelo";

    var parent = (string?)ViewData["Parent"];
    var from = (string?)ViewData["From"];
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Cadastro" asp-controller="Home" asp-action="Index">Cadastro</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Modelo</a></li>
        <li class="breadcrumb-item active" aria-current="page">Editar @Model.Codigo</li>
    </ol>
</nav>

<section>
    <h1>Editar Modelo</h1>

    <form asp-action="Edit" class="container">
        @*<h5>Modelo @Model.Codigo</h5>*@

        <partial name="_Form" model="Model" />

        <input type="hidden" asp-for="Codigo" />
                
        <input type="hidden" asp-for="RowVersion" />

        <input type="hidden" asp-for="@parent" />
        
        <input type="hidden" asp-for="@from" />

        <p>
            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i>Salvar</button>
        </p>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
