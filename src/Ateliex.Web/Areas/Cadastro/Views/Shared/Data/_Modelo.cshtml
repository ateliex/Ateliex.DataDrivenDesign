@model Ateliex.Areas.Cadastro.Models.Modelo

@{
    int? modeloId = (int?)ViewData["modeloId"];
}

<dl class="row">
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-9">
        @if (modeloId.HasValue)
        {
            <a asp-area="Cadastro" asp-controller="Modelo" asp-action="Detalhar" asp-route-id="@Model.Id">
                @Html.DisplayFor(model => model.Nome)
                <i class="bi bi-link-45deg"></i>
            </a>
        }
        else
        {
            @Html.DisplayFor(model => model.Nome)
        }
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.CustoDeProducao)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.CustoDeProducao)
    </dd>
</dl>
