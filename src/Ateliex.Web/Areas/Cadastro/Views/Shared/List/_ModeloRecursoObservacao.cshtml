@model IEnumerable<Ateliex.Areas.Cadastro.Models.ModeloRecursoObservacao>

<thead class="table-light">
    <tr>
        <th>#</th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recurso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recurso.Modelo)
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                <a asp-area="Cadastro" asp-controller="ModeloRecursoObservacao" asp-action="Detalhar" asp-route-id="@item.Id"><i class="bi bi-link-45deg"></i></a>&nbsp;
                <a asp-area="Cadastro" asp-controller="ModeloRecursoObservacao" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>&nbsp;
                <a asp-area="Cadastro" asp-controller="ModeloRecursoObservacao" asp-action="Excluir" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td class="text-truncate" style="max-width:300px">
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                <a asp-area="Cadastro" asp-controller="ModeloRecurso" asp-action="Detalhar" asp-route-id="@item.RecursoId">
                    @Html.DisplayFor(modelItem => item.Recurso.Descricao)
                    <i class="bi bi-link-45deg"></i>
                </a>
            </td>
            <td>
                <a asp-area="Cadastro" asp-controller="Modelo" asp-action="Detalhar" asp-route-id="@item.Recurso.ModeloId">
                    @Html.DisplayFor(modelItem => item.Recurso.Modelo.Nome)
                    <i class="bi bi-link-45deg"></i>
                </a>
            </td>
        </tr>
    }
</tbody>
