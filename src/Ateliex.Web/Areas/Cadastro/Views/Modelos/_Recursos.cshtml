@model IEnumerable<Ateliex.Areas.Cadastro.Models.Recurso>

<thead class="table-light">
    <tr>
        <th>#</th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Custo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unidades)
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                <a asp-action="EditarRecurso" asp-route-id="@item.GetId()"><i class="bi bi-pencil"></i></a>&nbsp;
                <a asp-action="ExcluirRecurso" asp-route-id="@item.GetId()"><i class="bi bi-trash"></i></a>
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                <a asp-action="DetalharRecurso" asp-route-id="@item.GetId()">
                    @Html.DisplayFor(modelItem => item.Descricao)
                    <i class="bi bi-link-45deg"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Custo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidades)
            </td>
        </tr>
    }
</tbody>
