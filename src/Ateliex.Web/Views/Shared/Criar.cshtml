@model System.ComponentModel.DataEntity

@{
    var info = Model.GetInfo();

    ViewData["Title"] = $"Novo - {info.PluralName}";
}

<h1>Criar @info.SingleName</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a>@info.AreaName</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">@info.PluralName</a></li>
        <li class="breadcrumb-item active" aria-current="page">Criar Novo</li>
    </ol>
</nav>

<div class="container">
    <h5>Novo</h5>

    <hr />

    <form asp-action="Editar">
        <partial name="_Form" model="Model" />

        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i>&nbsp;Salvar</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
