@model System.ComponentModel.DataEntity

@{
    var info = Model.GetInfo();

    ViewData["Title"] = $"Exclusão - {Model.Id} - {info.PluralName}";
}

<h1>Excluir @info.SingleName?</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a>@info.AreaName</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">@info.PluralName</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Id</li>
    </ol>
</nav>

<div class="container">
    <h5>@info.SingleName @Model.Id</h5>

    <hr />

    <partial name="_@Model.GetTypeName()" model="Model" />

    <form asp-action="Excluir">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-exclamation-triangle"></i>&nbsp;Confirmar Exclusão
        </button>
    </form>
</div>
